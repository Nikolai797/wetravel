@page
@model Web.Pages.Travels.EditModel

@{
    ViewData["Title"] = "Редактирай";
}

<h1>Редактирай</h1>

<h4>Пътувания</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Travel.Id" />
            <div class="form-group">
                <label>Дестинация</label>
                <input asp-for="Travel.Destination" class="form-control" />
                <span asp-validation-for="Travel.Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Номер на клиента</label>
                <select asp-for="Travel.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Travel.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
